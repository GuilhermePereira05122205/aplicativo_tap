{% extends "layout.twig" %}

{% block body %}

<h1 class="text-center text-3xl">Cadastro</h1>

<div class="container mx-auto p-4">
    <form action="/register" method="post" class="flex flex-col">
        <label for="titulo" class="text-lg">Email</label>
        <input type="text" name="email" id="titulo"
            class="p-2 border-solid border-2 border-black rounded-sm w-full m-2">
        <label for="assunto" class="text-lg">Senha</label>
        <input type="password" id="assunto" name="password"
            class="p-2 border-solid border-2 border-black rounded-sm w-full m-2">
        <div class="flex justify-end">
            <button class="p-2 text-white bg-blue-500 text-right rounded-md text-lg my-4">Cadastrar</button>
        </div>
    </form>
</div>

{% endblock %}